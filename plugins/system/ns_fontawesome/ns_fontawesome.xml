<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 3.2//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension type="plugin" version="1.0" group="system" method="upgrade" client="site">
	<name>System - NS Font Awesome</name>
	<creationDate>27 Dec 2013</creationDate>
	<author>Natural Selection Web Design LLC</author>
	<license>Released under the GNU/GPL License</license>
	<authorEmail>info@nswd.co</authorEmail>
	<authorUrl>http://nswd.co</authorUrl>
	<version>1.6</version>
	<description><![CDATA[ NS Font Awesome automatically inserts glyph icons into standard html elements using CSS. No icons to load or manually insert!  If you use NS FontAwesome please post a review on the  <a href='http://extensions.joomla.org/write-review/review/add?extension_id=8063' target='_blank'>Joomla! Extensions Directory</a>.]]></description>
	<files>
		<filename plugin="ns_fontawesome">ns_fontawesome.php</filename>
		<filename>index.html</filename>
		<folder>fields</folder>
		<folder>fontawesome</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/system/ns_fontawesome/fields/">
				<field type="logo" default="" />
				<field type="spacera" default="" />
				<field name="spacer1" type="spacer" hr="true" />
				<field type="spacera" default="&lt;div style=&quot;font-family:arial;font-size:12px;&quot;&gt;If you use NS Font Awesome, please post a rating and a review at the " />
				<field type="spacera" default="Joomla! Extensions Directory:&lt;/span&gt; &lt;a style=&quot;font-family:arial;color:#828627;&quot; target=&quot;blank&quot; href=&quot;http://extensions.joomla.org/write-review/review/add?extension_id=8063&quot;&gt;Here&lt;/a&gt;" />
				<field name="spacer4" type="spacer" hr="true" />
			</fieldset>
		</fields>
	</config>
	 <updateservers>
    	<server type="extension" priority="2" name="plg_nsfontawesome">https://nswd.co/updater/nsfontawesome-update.xml</server>
   	</updateservers>
</extension>


